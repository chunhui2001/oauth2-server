<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.strategicgains.oauth.entities.mmapping.userMapper">

    <sql id="Base_Column_List">
        USER_ID, DOB, CREATED_TIME, EMAIL, GENDER, USER_NAME, PASSWD, PHONE, ROLES, USER_STATUS,
        OPENID, PHOTO, UNIONID
    </sql>

    <select id="getUser" parameterType="java.lang.String" resultType="com.strategicgains.oauth.entities.User">
        select
        <include refid="Base_Column_List" />
        from USERS
        where USER_ID = #{userId,jdbcType=VARCHAR}
    </select>

</mapper>